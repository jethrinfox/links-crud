<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{link._id}}" method="post">
                        <div class="form-group">
                            <label for="title">Title</label>
                            <input type="text" value="{{link.title}}" class="form-control" name="title" id="title"
                                aria-describedby="helpId" placeholder="Title" autofocus>
                            <small id="helpId" class="form-text text-muted">Help text</small>
                        </div>
                        <div class="form-group">
                            <label for="url">URL</label>
                            <input type="url" value="{{link.url}}" class="form-control" name="url" id="url"
                                aria-describedby="helpId" placeholder="URL">
                            <small id="helpId" class="form-text text-muted">Help text</small>
                        </div>
                        <div class="form-group">
                            <label for="description">Description</label>
                            <textarea class="form-control" name="description" id="description" placeholder="Description"
                                rows="3">{{link.description}}</textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>